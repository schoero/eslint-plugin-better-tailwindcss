{
  "extends": "@schoero/configs/tsconfig",
  "compilerOptions": {

    // paths
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "Preserve",

    // general
    "noEmit": true,
    "target": "ES2020",

    // strictness
    "noImplicitAny": false,
    "paths": {
      "readable-tailwind:build:*": ["build/*"],
      "readable-tailwind:config:*": ["src/config/*"],
      "readable-tailwind:parsers:*": ["src/parsers/*"],
      "readable-tailwind:rules:*": ["src/rules/*"],
      "readable-tailwind:tests:*": ["tests/*"],
      "readable-tailwind:types:*": ["src/types/*"],
      "readable-tailwind:utils:*": ["src/utils/*"]
    },

    // imports
    "verbatimModuleSyntax": true
  }
}
