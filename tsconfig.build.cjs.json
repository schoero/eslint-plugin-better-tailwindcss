{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2020"
  },
  "include": [
    "src/tailwind/v3/**/*.ts",
    "src/tailwind/v4/**/*.ts",
    "src/tailwind/async/**/*.ts",
    "src/configs/cjs.ts",
    "src/api/defaults.ts",
    "src/api/types.ts"
  ]
}
